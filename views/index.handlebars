<div class="row">
  <center>

    <!--Menu (Left)-->
    <div class="col-md-4">
      <h3 class="submitFont"></h3>
      <div id="burgersAvailable">

        <!--Custom Burger-->
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>

              <!--Devour It Button-->
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-4"></div> 

    <!--Eaten Burgers (Right)-->
    <div class="col-md-4">
      <h3 class="submitFont"></h3>
      <div id="alreadyEaten">

        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </center>
</div>
